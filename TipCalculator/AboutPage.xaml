<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TipCalculator.AboutPage"
             Title="Sobre nós">
    <VerticalStackLayout Spacing="25" Padding="150" >
        <Label 
            Text="Feito por Gustavo Henrique e Isabelly Xavier, alunos da ETEC Prof. Horácio Agusto da Silveira."
            VerticalOptions="Center" 
            HorizontalOptions="Center" />
    
        <Button
            x:Name="AboutButton"
            Text="Clique aqui para saber mais sobre Gustavo!"
            Clicked="AboutButton_ClickedOne" 
            WidthRequest=" 625"/>

        <Button
    x:Name="AboutButtonTwo"
    Text="Clique aqui para saber mais sobre Isabelly!"
    Clicked="AboutButton_ClickedTwo" 
    WidthRequest=" 625"/>
    </VerticalStackLayout>
</ContentPage>